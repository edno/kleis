{
    "name": "edno/kleis",
    "description": "Squid Guard Basic Front End",
    "keywords": ["users", "management"],
    "license": "MIT",
    "authors": [
      {
        "name": "Gregory Heitz",
        "email": "edno@edno.io"
      }
    ],
    "type": "project",
    "require": {
        "laravel/framework": "~5.8",
        "whitehat101/apr1-md5": "~1.0"
    },
    "require-dev": {
        "codeception/codeception": "~4.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "app/Lib/String.php"
        ]
    },
    "autoload-dev": {
        "classmap": [
            "database",
            "tests/_data"
        ]
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "build-archive": [
            "php artisan clear",
            "composer archive --format=zip --dir=bin/ --file=kleis-1.3"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "process-timeout": 0
    },
    "archive": {
        "exclude": [
            "bin",
            "tests",
            "node_modules",
            "resources/assets",
            "storage/*",
            "*file",
            "*.xml",
            "*.yml",
            "*.js",
            "*.json",
            "!composer.json",
            "vendor",
            ".env.codecept",
            ".*",
            "!.env.example",
            "!kleis.conf"
        ]
    }
}
